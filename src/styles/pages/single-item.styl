.single-item-view.view
 
  .listing-img
    width: 90%
    height: 200px
    display: block
    margin-bottom: 5px
    position: relative
    max-width: 350px
    
    i
      cursor: pointer
      position: absolute
      display: block
      top: 50%
      margin-top: -20px
      color: #fff
      font-size: em($h1)
      
      &.left
        left: 10px
      
      &.right
        right: 10px
      
    
  .buttons
    display: block
    margin-top: 30px
    text-align: left
    
  .item-button
    display: inline-block
    padding: 10px 20px
    border-radius: 5px
    border: 1px solid $dark-grey
    color: $dark-grey
    transition: background 0.4s ease
    &:hover
      background: $grey
    
    &:last-of-type
      margin-left: 10px
 