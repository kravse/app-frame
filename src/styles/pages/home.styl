.home-view.view
  padding: 0
  position: relative
  
  .home-hero
    background-color: rgb(51, 184, 254)
  
  .title
    color: #fff
    text-align: center
    text-transform: uppercase
    font-family: $standard-font
    
  .content
    position: absolute
    bottom: 0
    width: 100%
    padding-bottom: 100px
    
  form
    display: block
    width: 100%
    max-width: 1000px
    margin: 0 auto
    
    input
      width: 40%
      margin: 0 auto
      display: block
      background: #fff
      border: 0
      padding: 10px 15px
      // text-transform: uppercase
      font-size: em($h4)